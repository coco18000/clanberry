<h1>Send a Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form_margin">
    <p>From : <%= current_user.user_name %></p>
    <p>To : <%= @user.user_name %></p>
    <%= form_for @message do |f| %>
      <%= render 'shared/error_message' %>

      <%= f.hidden_field :from %>
      <%= f.hidden_field :to %>
      <%= f.label :body, "Body : ", class: "control-label" %>
      <%= f.text_area :body, class: "form-control" %>

      <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>