<h1>All users</h1>
<ul class="users">
  <%= @users.each do |user| %>
    <li>
      <% if user.avatar? %>
        <%= image_tag user.avatar.thumb.url, size: "80x80" %>
      <% else %>
        <%= image_tag 'noimage.gif' %>
      <% end %>
      <%= link_to user.user_name, user %>
    </li>
  <% end %>
</ul>